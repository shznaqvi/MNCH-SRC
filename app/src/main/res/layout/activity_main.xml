<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_grad"
    tools:context="edu.aku.hassannaqvi.mnch_src.MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="#d6d6d6"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnOpenForm"
                style="@style/buttons"
                android:layout_marginTop="20dp"
                android:onClick="OpenForm"
                android:text="@string/btnOpenForm" />

            <Button
                style="@style/buttons"
                android:layout_marginTop="20dp"
                android:onClick="OpenDB"
                android:text="OpenDatabaseManager" />

            <Button
                style="@style/buttons"
                android:layout_marginTop="20dp"
                android:onClick="syncData"
                android:text="Sync Data" />

            <!--<Button
                android:id="@+id/ShowSec4"
                style="@style/buttons"
                android:layout_marginTop="20dp"
                android:onClick="OpenSection4"
                android:text="@string/sec4" />-->

        </LinearLayout>
    </ScrollView>
</FrameLayout>