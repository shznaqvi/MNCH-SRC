<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_grad"
    tools:context="edu.aku.hassannaqvi.mnch_src.GetCluster">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="#d6d6d6"
        android:scrollbars="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_grad"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnGetHFNew"
                    style="@style/buttons"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:onClick="getHFNew"
                    android:text="@string/btnGetHF1" />

                <Button
                    android:id="@+id/btnGetVillagesNew"
                    style="@style/buttons"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:onClick="getVillagesNew"
                    android:text="@string/btnGetVillages" />

                <Button
                    android:id="@+id/btnGetUsersNew"
                    style="@style/buttons"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:onClick="getUsersNew"
                    android:text="@string/btnGetUsers" />


            </LinearLayout>


            <TextView
                android:id="@+id/lblurl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="@string/urlusers" />

            <EditText
                android:id="@+id/txturl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="30"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/btnGetHF"
                style="@style/buttons"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:onClick="getHF"
                android:text="@string/btnGetHF1" />

            <TextView
                android:id="@+id/lblurllhw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="@string/urlusers" />

            <EditText
                android:id="@+id/txturlvillages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="30"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/btnGetVillages"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:onClick="getVillages"
                android:text="@string/btnGetVillages" />

            <TextView
                android:id="@+id/lblurl_users"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="@string/urlusers" />

            <EditText
                android:id="@+id/txturl_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="30"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/btnGetUsers"
                style="@style/buttons"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:onClick="getUsers"
                android:text="@string/btnGetUsers" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>