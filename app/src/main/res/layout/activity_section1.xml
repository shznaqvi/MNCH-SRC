<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:background="#d6d6d6"
    android:scrollbars="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/lbl_s1q105"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/baseline_s1q106a"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/s1q105"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" />

        </LinearLayout>

        <TextView
            android:id="@+id/lbl_s1q106a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/baseline_s1q105"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <Spinner
            android:id="@+id/s1q106a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" />

        <TextView
            android:id="@+id/lbl_formid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/baseline_formid"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/formid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/baseline_formid">

        </EditText>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hh_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:enabled="false"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/checkHH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="40"
                android:text="Check HH" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fldGrp01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/lbl_s1q102"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/baseline_s1q102"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/s1q102"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:ems="10"
                android:hint="@string/baseline_s1q102"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/lbl_s1q103"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/baseline_s1q103"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radio_s1q103"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/RDO_s1q103_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/baseline_s1q103_1" />

                <RadioButton
                    android:id="@+id/RDO_s1q103_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/baseline_s1q103_2" />

            </RadioGroup>

            <TextView
                android:id="@+id/lbl_s1q104"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/baseline_s1q104"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/s1q104"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/baseline_s1q104"
                android:inputType="number"
                android:maxLength="2" />

            <TextView
                android:id="@+id/lbl_s1q108"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/baseline_s1q108"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/s1q108"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="0123456789"
                android:ems="10"
                android:hint="@string/baseline_s1q108"
                android:inputType="phone"
                android:maxLength="11" />

            <TextView
                android:id="@+id/lbl_s1q108b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/baseline_s1q108b"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/s1q108b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="0123456789"
                android:ems="10"
                android:hint="@string/baseline_s1q108"
                android:inputType="phone"
                android:maxLength="11" />

            <TextView
                android:id="@+id/lbl_s1q112"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/baseline_s1q112"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/radio_s1q112"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/RDO_s1q112_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/baseline_s1q112_1" />

                <RadioButton
                    android:id="@+id/RDO_s1q112_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/baseline_s1q112_2" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/buttons"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="endInterview"
                    android:text="@string/end_interview"
                    android:textColor="#ff1e1e" />

                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/buttons"
                    android:onClick="startInterview"
                    android:text="@string/next_section"
                    android:textColor="#1ed61e" />
                <!--'onClick' for btn_Continue will call next section form e.g.: openSection2-->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>